		"_postman_id": "c7a8b9d0-1e2f-4a3b-8c9d-0e1f2a3b4c5d",
		"name": "Acervo SPU API",
		"description": "Coleção de requisições para interação com a API do Acervo da SPU (Secretaria do Patrimônio da União).\n\nInclui exemplos para:\n- Download de arquivo por Nome (SPU Services)\n- Download de arquivo por ID (SPU Net / Portal)\n- Pesquisa de arquivos (Exemplo POST)",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Download por Nome (SPU Services)",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "X-API-Key",
						"value": "{{api_key}}",
						"type": "text",
						"description": "Chave de Autenticação"
					}
				],
				"url": {
					"raw": "{{base_url_spuservices}}/acervo/arquivo/{{bucket}}/{{file_name}}",
					"host": [
						"{{base_url_spuservices}}"
					],
					"path": [
						"acervo",
						"arquivo",
						"{{bucket}}",
						"{{file_name}}"
					]
				},
				"description": "Realiza o download de um arquivo específico utilizando seu nome completo e o bucket de origem.\n\nBaseado na documentação: `download-arquivos-acervo-cgdai.ipynb`."
			},
			"response": []
		},
		{
			"name": "Download por ID (Portal Público)",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url_spunet}}/acervo/api/public/portal/arquivo-anexo/{{file_id}}",
					"host": [
						"{{base_url_spunet}}"
					],
					"path": [
						"acervo",
						"api",
						"public",
						"portal",
						"arquivo-anexo",
						"{{file_id}}"
					]
				},
				"description": "Realiza o download (ou visualização) de um arquivo anexo utilizando seu ID numérico.\n\nEndpoint público utilizado pelo Portal de Serviços."
			},
			"response": []
		},
		{
			"name": "Pesquisar Arquivos (Exemplo POST)",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					},
					{
						"key": "X-API-Key",
						"value": "{{api_key}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"termo\": \"planta\",\n    \"data_inicio\": \"2023-01-01\",\n    \"data_fim\": \"2023-12-31\",\n    \"tipo_documento\": \"cartografia\"\n}"
				},
				"url": {
					"raw": "{{base_url_spunet}}/acervo/api/public/portal/pesquisa",
					"host": [
						"{{base_url_spunet}}"
					],
					"path": [
						"acervo",
						"api",
						"public",
						"portal",
						"pesquisa"
					]
				},
				"description": "Exemplo de requisição POST para pesquisa de arquivos (Simulação/Template).\n\nPermite enviar critérios de filtro no corpo da requisição."
			},
			"response": []
		}
